<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/costm_notification_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_notifications_black_24dp" />

    <TextView
        android:id="@+id/costm_notification_tv"
        android:background="@drawable/costm_notifiction_shape"
        android:textColor="#fff"
        android:textSize="8sp"
        android:padding="4dp"
        android:gravity="center"
        android:layout_above="@id/costm_notification_iv"
        android:layout_toRightOf="@id/costm_notification_iv"
        android:layout_marginStart="-15dp"
        android:layout_marginBottom="-15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10" />
</RelativeLayout>